<h1>Connexion</h1>

{% if error %}
  <p style="color: red;">{{ error }}</p>
{% endif %}

<form method="POST" action="/signin">
  <label>Email :</label>
  <input type="email" name="email" required>

  <label>Mot de passe :</label>
  <input type="password" name="password" required>

  <button type="submit">Se connecter</button>
</form>
